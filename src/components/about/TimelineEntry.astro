---
interface Props {
  title: string;
  date: string;
  organization: string;
  description?: string;
  borderStyle?: 'solid' | 'dashed';
  borderColor?: string;
  dateColor?: string;
}

const {
  title,
  date,
  organization,
  description,
  borderStyle = 'solid',
  borderColor = 'border-neutral-400',
  dateColor = 'text-neutral-600',
} = Astro.props;

const borderClass = borderStyle === 'dashed' ? 'border-l-2 border-dashed' : 'border-l-2';
---

<div class={`${borderClass} ${borderColor} pl-4`}>
  <div class="grid grid-cols-[1fr_auto] items-baseline gap-x-4 gap-y-1">
    <h3 class="text-md font-sans font-medium text-neutral-200 md:text-lg">{title}</h3>
    <span class={`text-right font-mono  text-xs ${dateColor}`}>{date}</span>
    <p class="col-span-2 font-mono text-xs text-fuchsia-500 md:text-sm">{organization}</p>
  </div>
  {description && <p class="mt-2 max-w-xl text-sm text-neutral-500" set:html={description} />}
</div>
