---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  src: ImageMetadata;
  alt: string;
  caption?: string;
}

const { src, alt, caption } = Astro.props;
---

<figure class="my-10">
  <div class="aspect-video overflow-hidden rounded">
    <Image src={src} alt={alt} class="h-full w-full object-cover" loading="lazy" />
  </div>
  {
    caption && (
      <figcaption class="mt-3 text-center font-mono text-sm text-neutral-500 italic">
        {caption}
      </figcaption>
    )
  }
</figure>
