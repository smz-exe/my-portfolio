---
import Layout from '@/layouts/Layout.astro';
import Footer from '@/components/shared/Footer.astro';
import TimelineEntry from '@/components/about/TimelineEntry.astro';
import { Image } from 'astro:assets';
import profileImage from '@/assets/about/profile.png';
---

<Layout title="About | Yuki Shimizu">
  <section class="container mx-auto max-w-4xl px-6 py-12 md:py-20">
    <a
      href="/"
      class="group mb-8 inline-flex items-center gap-2 font-mono text-sm text-neutral-500 transition-colors hover:text-accent"
      aria-label="Back to home"
    >
      <span class="transition-transform group-hover:-translate-x-1">&lt;</span>
      cd ..
    </a>
    <!-- Terminal Header -->
    <div class="mb-8 border-b border-neutral-800 pb-4 font-mono text-sm md:mb-12 md:text-base">
      <div class="flex flex-col gap-2 text-muted-foreground">
        <span class="block">
          <span class="text-neutral-400">root@portfolio</span>:<span class="text-neutral-500"
            >~</span
          >$ cat about.md
          <span class="ml-1 inline-block animate-blink text-neutral-400">_</span>
        </span>
      </div>
    </div>

    <!-- Profile Section -->
    <div class="mb-16 grid gap-8 md:grid-cols-3">
      <div class="md:col-span-2">
        <h1 class="mb-4 font-sans text-4xl font-bold tracking-tight text-foreground">
          Yuki Shimizu
        </h1>
        <p class="mb-4 font-mono text-sm text-fuchsia-500">
          Software Engineer & Senior Engineering Student
        </p>
        <p class="leading-relaxed text-neutral-400">
          Passionate about building elegant software solutions and exploring the intersection of AI
          and Information Theory. Currently researching Explainable AI methods to make deep learning
          models more interpretable.
        </p>
      </div>
      <div
        class="flex items-center justify-center overflow-hidden rounded-none border border-neutral-800 bg-neutral-900/50"
      >
        <Image
          src={profileImage}
          alt="profile image"
          class="h-full w-full object-cover"
          width={960}
          height={720}
        />
      </div>
    </div>

    <!-- Skills Section -->
    <div class="mb-16">
      <h2
        class="mb-6 flex items-center gap-2 font-mono text-xs tracking-wider text-neutral-500 uppercase"
      >
        <span class="text-cyan-400">#</span> Skills
      </h2>
      <div class="grid gap-4 md:grid-cols-2">
        <div class="border border-neutral-800 p-4">
          <h3 class="mb-3 font-mono text-sm text-neutral-300">Languages</h3>
          <div class="flex flex-wrap gap-2">
            {
              ['TypeScript', 'Python', 'C++', 'Rust'].map((skill) => (
                <span class="border border-neutral-700 px-2 py-1 font-mono text-xs text-neutral-400">
                  {skill}
                </span>
              ))
            }
          </div>
        </div>
        <div class="border border-neutral-800 p-4">
          <h3 class="mb-3 font-mono text-sm text-neutral-300">Frameworks</h3>
          <div class="flex flex-wrap gap-2">
            {
              ['React', 'Next.js', 'NestJs', 'FastAPI', 'TensorFlow'].map((skill) => (
                <span class="border border-neutral-700 px-2 py-1 font-mono text-xs text-neutral-400">
                  {skill}
                </span>
              ))
            }
          </div>
        </div>
      </div>
    </div>

    <!-- Experience Section -->
    <div class="mb-16">
      <h2
        class="mb-6 flex items-center gap-2 font-mono text-xs tracking-wider text-neutral-500 uppercase"
      >
        <span class="text-cyan-400">#</span> Experience
      </h2>
      <div class="space-y-6">
        <TimelineEntry
          title="Software Engineer Intern"
          date="Sep 2025-Present"
          organization="Pracareer"
          description='Full-stack development with Next.js and NestJS, collaborating closely with the business team. Contributed to MVP launch of <a href="https://unicorncareer.jp/" target="_blank" rel="noopener noreferrer" class="text-neutral-400 underline transition-colors hover:text-accent">unicorncareer.jp</a> and continue iterating based on user feedback.'
        />
        <TimelineEntry
          title="XAI Research"
          date="Jan 2025-Present"
          organization="Computational Science Lab."
          description="Investigating DNN interpretability through analysis of internal representations, model parameters, and information flow quantified via Mutual Information."
        />
        <TimelineEntry
          title="Software Engineer Intern"
          date="Sep 2024-Mar 2025"
          organization="Conico"
          borderColor="border-neutral-800"
          description='Shipped <a href="https://sst.sendenkaigi.com/" target="_blank" rel="noopener noreferrer" class="text-neutral-400 underline transition-colors hover:text-accent">sst.sendenkaigi.com</a> as part of a cross-functional team. Developed frontend features with Next.js, implemented API integration layers, and contributed to Hono backend services.'
        />
      </div>
    </div>

    <!-- Education Section -->
    <div class="mb-16">
      <h2
        class="mb-6 flex items-center gap-2 font-mono text-xs tracking-wider text-neutral-500 uppercase"
      >
        <span class="text-cyan-400">#</span> Education
      </h2>
      <div class="space-y-6">
        <TimelineEntry
          title="M.E. Applied Physics and Physico-Informatics"
          date="*Starting Apr 2026"
          organization="Keio University, Japan"
          borderStyle="dashed"
          borderColor="border-neutral-600"
          dateColor="text-cyan-400"
        />
        <TimelineEntry
          title="B.E. Applied Physics and Physico-Informatics"
          date="Apr 2022-Mar 2026"
          organization="Keio University, Japan"
        />
      </div>
    </div>

    <!-- Contact Section -->
    <div>
      <h2
        class="mb-6 flex items-center gap-2 font-mono text-xs tracking-wider text-neutral-500 uppercase"
      >
        <span class="text-cyan-400">#</span> Contact
      </h2>
      <div class="flex flex-wrap gap-4">
        <a
          href="https://github.com/smz-exe/"
          target="_blank"
          rel="noopener noreferrer"
          class="hover-glitch border border-neutral-800 px-4 py-2 font-mono text-sm text-neutral-400 transition-colors hover:border-neutral-600"
        >
          GitHub
        </a>
        <!-- Temporarily disabled -->
        <span
          class="cursor-not-allowed border border-neutral-800/50 px-4 py-2 font-mono text-sm text-neutral-600"
        >
          Email
        </span>
        <a
          href="https://www.linkedin.com/in/yuki-shimizu-13861-dev/"
          target="_blank"
          rel="noopener noreferrer"
          class="hover-glitch border border-neutral-800 px-4 py-2 font-mono text-sm text-neutral-400 transition-colors hover:border-neutral-600"
        >
          LinkedIn
        </a>
      </div>
    </div>
  </section>

  <div class="container mx-auto max-w-4xl px-6 pt-8 pb-12">
    <Footer />
  </div>
</Layout>
