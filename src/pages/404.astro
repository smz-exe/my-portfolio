---
import Layout from '@/layouts/Layout.astro';
import Footer from '@/components/shared/Footer.astro';
---

<Layout title="404 | Not Found">
  <section class="container mx-auto max-w-4xl px-6 py-12 md:py-20">
    <a
      href="/"
      class="group mb-8 inline-flex items-center gap-2 font-mono text-sm text-neutral-500 transition-colors hover:text-accent"
      aria-label="Back to home"
    >
      <span class="transition-transform group-hover:-translate-x-1">&lt;</span>
      cd ..
    </a>

    <!-- Terminal Header -->
    <div class="mb-8 border-b border-neutral-800 pb-4 font-mono text-sm md:text-base">
      <div class="flex flex-col gap-2 text-muted-foreground">
        <span class="block">
          <span class="text-neutral-400">root@portfolio</span>:<span class="text-neutral-500"
            >~</span
          >$ cat {Astro.url.pathname}
          <span class="ml-1 inline-block animate-blink text-neutral-400">_</span>
        </span>
      </div>
    </div>

    <!-- Error Output -->
    <div class="mb-20 font-mono text-sm text-red-500">
      cat: {Astro.url.pathname}: No such file or directory
    </div>

    <!-- 404 Display -->
    <div class="mb-8">
      <h1
        class="mb-4 hover-glitch font-mono text-8xl font-bold tracking-tighter text-foreground md:text-9xl"
      >
        404
      </h1>
      <p class="font-mono text-neutral-400">
        The page you're looking for doesn't exist or has been moved.
      </p>
    </div>
  </section>

  <div class="container mx-auto max-w-4xl px-6 pt-8 pb-12">
    <Footer />
  </div>
</Layout>
